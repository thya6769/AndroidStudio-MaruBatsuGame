<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.caqmei.marubatsugame.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/emptyboard"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView"
            android:layout_below="@+id/middleMiddleMaru"
            android:layout_toRightOf="@+id/bottomMiddleMaru"
            android:layout_toEndOf="@+id/bottomMiddleMaru"
            android:clickable="false"
            android:onClick="dropIn"
            android:tag="0"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView2"
            android:layout_below="@+id/middleMiddleMaru"
            android:layout_toRightOf="@+id/bottomMiddleMaru"
            android:layout_toEndOf="@+id/bottomMiddleMaru"
            android:clickable="false"
            android:onClick="dropIn"
            android:tag="1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView3"
            android:layout_below="@+id/middleMiddleMaru"
            android:layout_toRightOf="@+id/bottomMiddleMaru"
            android:layout_toEndOf="@+id/bottomMiddleMaru"
            android:onClick="dropIn"
            android:tag="2"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView4"
            android:layout_below="@+id/middleMiddleMaru"
            android:layout_toRightOf="@+id/bottomMiddleMaru"
            android:layout_toEndOf="@+id/bottomMiddleMaru"
            android:onClick="dropIn"
            android:tag="3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="25dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView5"
            android:layout_below="@+id/middleMiddleMaru"
            android:layout_toRightOf="@+id/bottomMiddleMaru"
            android:layout_toEndOf="@+id/bottomMiddleMaru"
            android:clickable="false"
            android:onClick="dropIn"
            android:tag="4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView6"
            android:layout_below="@+id/middleMiddleMaru"
            android:layout_toRightOf="@+id/bottomMiddleMaru"
            android:layout_toEndOf="@+id/bottomMiddleMaru"
            android:clickable="false"
            android:onClick="dropIn"
            android:tag="5"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView7"
            android:layout_below="@+id/middleMiddleMaru"
            android:layout_toRightOf="@+id/bottomMiddleMaru"
            android:layout_toEndOf="@+id/bottomMiddleMaru"
            android:clickable="false"
            android:onClick="dropIn"
            android:tag="6"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView8"
            android:layout_below="@+id/middleMiddleMaru"
            android:layout_toRightOf="@+id/bottomMiddleMaru"
            android:layout_toEndOf="@+id/bottomMiddleMaru"
            android:clickable="false"
            android:onClick="dropIn"
            android:tag="7"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView9"
            android:layout_below="@+id/middleMiddleMaru"
            android:layout_toRightOf="@+id/bottomMiddleMaru"
            android:layout_toEndOf="@+id/bottomMiddleMaru"
            android:clickable="false"
            android:onClick="dropIn"
            android:tag="8"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp" />

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f39090"
        android:padding="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/playAgainLayout"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/winnerMessage"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again!"
            android:id="@+id/playAgainBtn"
            android:onClick="playAgain"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

</RelativeLayout>
